@model WendhelAton.FAQ.Web.Areas.Manage.ViewModels.Threads.UpdateTitleViewModel
@{
    ViewData["Title"] = "UpdateTitle";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<h2>Update Title</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/manage/faqs/update-title" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <input type="hidden" name="Id" value="@Model.Id" />
                <label for="Title">Title:</label>
                <input type="text" class="form-control" name="Title" value="@Model.Title" />
            </div>
            <div class="form-group">
                <label for="Content">Content</label>
                <textarea class="form-control" rows="4" name="Content">
                    @Model.Content
                </textarea>
            </div>
            <div class="form-group">
                <label for="UpdateAt">Update At:</label>
                <input type="text" class="form-control" name="UpdatedAt" id="UpdatedAt" value="@Model.UpdatedAt" />
            </div>
            
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

@section pageScripts{
    <script>
    $(function () {
        $("#UpdatedAt").datepicker({ dateFormat: 'dd/mm/yy' });
    });
    </script>
}